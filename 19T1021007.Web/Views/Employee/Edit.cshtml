@model _19T1021007.DomainModels.Employee
@{

}

<div class="box box-primary">
    <div class="box box-body">
        @*form*@
        <form class="form-horizontal" action="~/Employee/Save" method="post" enctype="multipart/form-data">

            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.EmployeeID)

            <div class="form-group">
                <label class="control-label col-sm-2" for="">Họ:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", @autofocus = "autofocus" })
                    @Html.ValidationMessageFor(m => m.FirstName, "", new { @style = "color:red;" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="">Tên:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.LastName, "", new { @style = "color:red;" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Ngày sinh</label>
                <div class="col-sm-10">
                    @* <input type="text" class="form-control" name="BirthDate" value="@Model.BirthDate">*@
                    <input type="text" class="form-control" id="BirthDate" name="birthday"
                           value="@string.Format("{0:dd/MM/yyyy}",Model.BirthDate)" placeholder="">

                    @Html.ValidationMessageFor(m => m.BirthDate, "", new { @style = "color:#f00" })
                </div>
            </div>
            @*<div class="form-group">
                    <label class="control-label col-sm-2">Ảnh</label>
                    <div class="col-sm-10">
                        <img src="@Model.Photo" style="width:50px;height:50px">
                    </div>
                </div>*@
            <div class="form-group">
                <label class="control-label col-sm-2">Ảnh đại diện:</label>
                <div class="col-sm-10">
                    <img src="~/Photo/@Model.Photo" id="photo" style="width:100px; height:100px" />
                    @Html.HiddenFor(m => m.Photo)
                    @**@
                    <input type="file" name="uploadPhoto" onchange="document.getElementById('photo').src = window.URL.createObjectURL(this.files[0])" />
                    @*@Html.ValidationMessageFor(m => m.Photo, "", new { @style = "color:#f00" })*@
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="">Ghi chú:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Notes, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="">Email:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-floppy-o"> Lưu dữ liệu</i>
                    </button>
                    <a href="~/Employee" class="btn btn-warning">Quay lại</a>
                </div>
            </div>
        </form>
        @**@

    </div>
</div>

