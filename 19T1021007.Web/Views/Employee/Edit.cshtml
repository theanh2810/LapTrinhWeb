@model _19T1021007.DomainModels.Employee
@{

}

<div class="box box-primary">
    <div class="box box-body">
        @*form*@
        <form class="form-horizontal" action="~/Employee/Save" method="post">

            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.EmployeeID)

            <div class="form-group">
                <label class="control-label col-sm-2" for="">Họ:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", @autofocus = "autofocus" })
                    @Html.ValidationMessageFor(m => m.FirstName, "", new { @style = "color:red;" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="">Tên:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.LastName, "", new { @style = "color:red;" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="">Ngày sinh:</label>
                <div class="col-sm-10">
                    
                    @Html.TextBoxFor(m => m.BirthDate, new { @class = "form-control" , @type = "date"})
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="">Ảnh đại diện:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Photo, new { @class = "form-control", @type = "file" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="">Ghi chú:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Notes, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="">Email:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-floppy-o"> Lưu dữ liệu</i>
                    </button>
                    <a href="~/Employee" class="btn btn-warning">Quay lại</a>
                </div>
            </div>
        </form>
        @**@

    </div>
</div>

