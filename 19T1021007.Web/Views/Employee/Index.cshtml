@model IEnumerable<_19T1021007.DomainModels.Employee>

@{
    ViewBag.Title = "Quản lý nhân viên";
}

<div class="box box-primary">
    <div class="box box-body">
        @*form tìm kiếm*@
        <form action="~/Employee" method="get">
            <div class="input-group">
                <input type="text" name="searchValue" class="form-control" placeholder="Search..." value="@ViewBag.SearchValue">
                <span class="input-group-btn">
                    <button type="submit" name="search" id="search-btn" class="btn btn-info">
                        <i class="fa fa-search"></i>
                    </button>
                    <a href="~/Employee/Create" class="btn btn-primary" style="margin-left:5px;">
                        <i class="fa fa-plus-circle">Bổ sung</i>
                    </a>
                </span>
            </div>
        </form>
        @*danh sách nhà cung cấp, phân trang*@
        <p>Có <strong>@ViewBag.RowCount</strong> nhân viên trong tổng số <strong>@ViewBag.PageCount</strong> trang</p>
        <div class="table-responsive">
            <table class="table table-bordered table-hover table-striped">
                <thead>
                    <tr class="bg-primary">
                        <th>Ảnh đại diện</th>
                        <th>Họ</th>
                        <th>Tên</th>
                        <th>Ngày sinh</th>
                        <th>Email</th>
                        <th>Ghi chú</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @*@for (int i = 0; i < 5; i++)
                        {
                            <tr>
                                <td><img style="width:70px;height:70px;" src="../Themes/dist/img/avatar.png" class="user-image" alt="User Image"></td>
                                <td>Nguyễn</td>
                                <td>Thế Anh</td>
                                <td>01/01/2000</td>
                                <td>nguyentheanhpro@gmail.com</td>
                                <td class="text-right">
                                    <a href="~/Employee/Edit" class="btn btn-sm btn-primary" title="Sửa">
                                        <i class="fa fa-edit"></i>
                                    </a>
                                    <a href="~/Employee/Delete" class="btn btn-sm btn-danger" title="Xóa">
                                        <i class="fa fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }*@
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><img style="width:50px;height:50px;" src="@item.Photo"></td>
                            <td>@item.FirstName</td>
                            <td>@item.LastName</td>
                            <td>@item.BirthDate.ToString("dd/MM/yyyy")</td>
                            <td>@item.Email</td>
                            <td>@item.Notes</td>
                            <td class="text-right">
                                <a href="~/Employee/Edit/@item.EmployeeID" class="btn btn-sm btn-primary" title="Sửa">
                                    <i class="fa fa-edit"></i>
                                </a>
                                <a href="~/Employee/Delete/@item.EmployeeID" class="btn btn-sm btn-danger" title="Xóa">
                                    <i class="fa fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
        <div class="text-center">
            <ul class="pagination">
                @for (int i = 1; i <= ViewBag.PageCount; i++)
                {
                    if (i == ViewBag.Page)
                    {
                        <li class="active"><a href="#">@i</a></li>
                    }
                    else
                    {
                        <li><a href="~/Supplier?page=@i&searchValue=@ViewBag.SearchValue">@i</a></li>
                    }
                }
                @*<li class="active"><a href="#">1</a></li>
        <li><a href="#">2</a></li>
        <li><a href="#">3</a></li>
        <li><a href="#">4</a></li>
        <li><a href="#">5</a></li>*@
            </ul>
        </div>
    </div>
</div>


