<header class="main-header">
    <!-- Logo -->
    <a href="~/" class="logo">
        <!-- mini logo for sidebar mini 50x50 pixels -->
        <span class="logo-mini"><b>A</b>LT</span>
        <!-- logo for regular state and mobile devices -->
        <span class="logo-lg"><b>Miji</b>Shop</span>
    </a>
    <!-- Header Navbar: style can be found in header.less -->
    <nav class="navbar navbar-static-top">
        <!-- Sidebar toggle button-->
        <a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </a>

        <div class="navbar-custom-menu">
            <ul class="nav navbar-nav">
               
                <!-- User Account: style can be found in dropdown.less -->
                @{ 
                    var userAccount = SelectListComerce.CookieToUserAccount(User.Identity.Name);
                }
                <li class="dropdown user user-menu">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        @*<img src="../Themes/dist/img/user2-160x160.jpg" class="user-image" alt="User Image">*@
                        @if (userAccount.Photo.Contains("http"))
                        {

                            <img src="@userAccount.Photo" class="user-image" alt="User Image">
                        }
                        else
                        {

                            <img src="~/Photo/@userAccount.Photo" class="user-image" alt="User Image">
                        }
                        <span class="hidden-xs">@userAccount.FullName</span>
                    </a>
                    <ul class="dropdown-menu">
                        <!-- User image -->
                        <li class="user-header">
                            @if (userAccount.Photo.Contains("http"))
                            {
                               
                                <img src="@userAccount.Photo" class="img-circle" alt="User Image">
                            }
                            else
                            {
                               
                                <img src="~/Photo/@userAccount.Photo" class="img-circle" alt="User Image">
                            }

                            @*<img src="../Themes/dist/img/user2-160x160.jpg" class="img-circle" alt="User Image">*@

                            <p>
                                @userAccount.FullName
                            </p>
                        </li>
                       
                        <!-- Menu Footer-->
                        <li class="user-footer">
                            <div class="pull-left">
                                <a href="~/Account" class="btn btn-default btn-flat">Tài khoản</a>

                            </div>

                            <div class="pull-right">
                                <a href="~/Account/Logout" class="btn btn-default btn-flat">Đăng xuất</a>
                            </div>
                        </li>
                    </ul>
                </li>
                <!-- Control Sidebar Toggle Button -->
                @*<li>
                    <a href="#" data-toggle="control-sidebar"><i class="fa fa-gears"></i></a>
                </li>*@
            </ul>
        </div>
    </nav>
</header>

