@model _19T1021007.DomainModels.Customer

@{

}

<div class="box box-primary">
    <div class="box box-body">
        @*form*@
        <form class="form-horizontal" action="~/Customer/Save" method="post">
            <input type="hidden" name="CustomerID" value="@Model.CustomerID" />
            <div class="form-group">
                <label class="control-label col-sm-2" for="">Tên khách hàng:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" value="@Model.CustomerName" name="CustomerName" autofocus>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="">Địa chỉ:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" value="@Model.Address" name="Address">
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="">Tên liên lạc:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" value="@Model.ContactName" name="ContactName">
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="">Quốc gia:</label>
                <div class="col-sm-10">
                    <select class="form-control" name="Country">
                        <option>-- Chọn quốc gia --</option>
                        @foreach (var item in _19T1021007.BusinessLayers.CommonDataService.ListOfCountries())
                        {
                            if (item.CountryName == Model.Country)
                            {
                                <option value="@item.CountryName" selected>@item.CountryName</option>
                            }
                            else
                            {
                                <option value="@item.CountryName">@item.CountryName</option>
                            }

                        }
                    </select>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="">Thành phố:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" value="@Model.City" name="City">
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="">Mã bưu chính:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" value="@Model.PostalCode" name="PostalCode">
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="">Email:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" value="@Model.Email" name="Email">
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-floppy-o"> Lưu dữ liệu</i>
                    </button>
                    <a href="~/Customer" class="btn btn-warning">Quay lại</a>
                </div>
            </div>
        </form>
        @**@

    </div>
</div>

