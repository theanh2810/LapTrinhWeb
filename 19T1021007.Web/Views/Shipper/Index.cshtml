@model IEnumerable<_19T1021007.DomainModels.Shipper>

@{
    ViewBag.Title = "Quản lý người giao hàng";
}

<div class="box box-primary">
    <div class="box box-body">
        @*form tìm kiếm*@
        <form action="~/Shipper" method="get">
            <div class="input-group">
                <input type="text" name="searchValue" class="form-control" placeholder="Search..." value="@ViewBag.SearchValue">
                <span class="input-group-btn">
                    <button type="submit" name="search" id="search-btn" class="btn btn-info">
                        <i class="fa fa-search"></i>
                    </button>
                    <a href="~/Shipper/Create" class="btn btn-primary" style="margin-left:5px;">
                        <i class="fa fa-plus-circle">Bổ sung</i>
                    </a>
                </span>
            </div>
        </form>
        @*danh sách shipper, phân trang*@
        <p>Có <strong>@ViewBag.RowCount</strong> người giao hàng trong tổng số <strong>@ViewBag.PageCount</strong> trang</p>
        <div class="table-responsive">
            <table class="table table-bordered table-hover table-striped">
                <thead>
                    <tr class="bg-primary">
                        <th>Tên người giao hàng</th>
                        <th>Số điện thoại</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                   
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.ShipperName</td>
                            <td>@item.Phone</td>
                            <td class="text-right">
                                <a href="~/Shipper/Edit/@item.ShipperID" class="btn btn-sm btn-primary" title="Sửa">
                                    <i class="fa fa-edit"></i>
                                </a>
                                <a href="~/Shipper/Delete/@item.ShipperID" class="btn btn-sm btn-danger" title="Xóa">
                                    <i class="fa fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
        <div class="text-center">
            <ul class="pagination">
                @for (int i = 1; i <= ViewBag.PageCount; i++)
                {
                    if (i == ViewBag.Page)
                    {
                        <li class="active"><a href="#">@i</a></li>
                    }
                    else
                    {
                        <li><a href="~/Shipper?page=@i&searchValue=@ViewBag.SearchValue">@i</a></li>
                    }
                }
                @*<li class="active"><a href="#">1</a></li>
        <li><a href="#">2</a></li>
        <li><a href="#">3</a></li>
        <li><a href="#">4</a></li>
        <li><a href="#">5</a></li>*@
            </ul>
        </div>
    </div>
</div>

