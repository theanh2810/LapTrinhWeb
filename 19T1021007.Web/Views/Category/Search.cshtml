@model _19T1021007.Web.Models.CategorySearchOutput
@{
    Layout = null;
}

<p>
    Có <strong>@Model.RowCount</strong> loại hàng trong tổng số <strong>@Model.PageCount</strong> trang
</p>
<div class="table-responsive">
    <table class="table table-bordered  table-hover table-striped">
        <thead>
            <tr class="bg-primary">

                <th>Tên loại hàng</th>
                <th>Chi tiết loại hàng</th>

                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Data)
            {
                <tr>

                    <td>@item.CategoryName</td>
                    <td>@item.Description</td>

                    <td class="text-right">
                        <a href="~/Category/Edit/@item.CategoryID" class="btn btn-sm btn-primary" title="Sửa">
                            <i class="fa fa-edit"></i>
                        </a>
                        <a href="~/Category/Delete/@item.CategoryID" class="btn btn-sm btn-danger" title="Xóa">
                            <i class="fa fa-trash"></i>

                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="text-center">
        <ul class="pagination">
            @for (int i = 1; i <= Model.PageCount; i++)
            {
                if (i == Model.Page)
                {

                    <li class="active"><a href="#">@i</a></li>
                }
                else
                {
                    <li> <a href="javascript:;" onclick="doSearch(@i)">@i</a></li>
                }
            }
        </ul>
    </div>
</div>