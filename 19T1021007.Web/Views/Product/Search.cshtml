@model _19T1021007.Web.Models.ProductSearchOutput
@{ Layout = null;

}

<p>
    Có <strong>@Model.RowCount</strong> sản phẩm trong tổng số <strong>@Model.PageCount</strong> trang
</p>
<div class="table-responsive">
    <table class="table table-bordered table-hover table-striped">
        <thead>
            <tr class="bg-primary">
                <th style="width:80px">Ảnh</th>
                <th>Tên mặt hàng</th>
                <th>Đơn vị tính</th>
                <th>Giá</th>
                <th style="width:75px">&nbsp;</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Data)
            {
                <tr>
                    <td>
                        @*<img src="~/Images/Products/samsung_NP900X4C.png" style="width:80px" />*@
                        @if (item.Photo.Contains("http"))
                        {
                            <img style="width:80px" src="@item.Photo" />
                        }
                        else
                        { <img style="width:80px" src="~/Photo/Products/@item.Photo" />}
                    </td>
                    <td style="vertical-align:middle">@item.ProductName</td>
                    <td style="vertical-align:middle">@item.Unit</td>
                    <td style="vertical-align:middle">@item.Price</td>
                    
                    <td class="text-right">
                        <a href="~/Product/Edit/@item.ProductID" class="btn btn-sm btn-primary" title="Sửa">
                            <i class="fa fa-edit"></i>
                        </a>
                        <a href="~/Product/Delete/@item.ProductID" class="btn btn-sm btn-danger" title="Xoá">
                            <i class="fa fa-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>

        @*<tbody>
            @for (int i = 1; i <= 3; i++)
            {
                <tr>
                    <td>
                        <img src="~/Images/Products/samsung_NP900X4C.png" style="width:80px" />
                    </td>
                    <td style="vertical-align:middle">Samsung Series 9 NP900X4C Premium Ultrabook</td>
                    <td style="vertical-align:middle">Fullbox</td>
                    <td style="vertical-align:middle">23,900,000</td>
                    <td class="text-right" style="vertical-align:middle">
                        <a href="~/product/edit/123" class="btn btn-xs btn-flat btn-info">
                            <i class="fa fa-edit"></i>
                        </a>
                        <a href="~/product/delete/123" class="btn btn-xs btn-flat btn-danger">
                            <i class="fa fa-remove"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>*@
    </table>

</div>
<div class="text-center">
    <ul class="pagination">
        @for (int i = 1; i <= Model.PageCount; i++)
        {
            if (i == Model.Page)
            {

                <li class="active"><a href="#">@i</a></li>
            }
            else
            {
                <li> <a href="javascript:;" onclick="doSearch(@i)">@i</a></li>
            }
        }
    </ul>
</div>

